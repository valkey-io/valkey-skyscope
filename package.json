{
  "name": "valkey-skyscope",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/frontend",
    "apps/server",
    "common/*"
  ],
  "main": "apps/frontend/electron.main.js",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.38.0"
  },
  "scripts": {
    "dev": "concurrently \"npm --workspace apps/frontend run dev\" \"npm --workspace apps/server run dev\"",
    "package-server": "npm --workspace apps/server run bundle",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.valkey.skyscope",
    "directories": {
      "output": "release"
    },
    "files": [
      "apps/frontend/main.js",
      "apps/frontend/dist/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "apps/server/dist/server-bundle.cjs",
        "to": "bin/server-backend.js"
      },
      {
        "from": "node_modules/@valkey",
        "to": "resources/app/node_modules/@valkey"
      }
    ],
    "mac": {
      "target": "dmg"
    }
  }
}
